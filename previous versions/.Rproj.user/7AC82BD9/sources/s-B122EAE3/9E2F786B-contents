set.seed(111)
n <- 100
p <- 5
x <- matrix(data = rnorm(n*p), nrow = n, ncol = p)
a1 <- rbinom(n, size = 1, prob = 0.5)
a2 <- rbinom(n, size = 1, prob = 0.35)
y <- 3 + 2 * x[ ,1] - 1 * x[ ,2] + 1.5 * x[ ,3] - 0.5 * x[ ,3] * x[ ,4] + 3 * x[ ,5] + 1 * a1 - 2 * a2 + rnorm(n)  
cont.res <- semibart(x.train = x, a.train = cbind(a1, a2), y.train = y, ndpost = 100)
cont.res$beta
